package(default_visibility = ["//visibility:public"])

load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_library",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "recursive_module_init.bc.js",
    entry_point = ":recursive_module_init.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "recursive_module_init.exe.jsoo",
    main   = ":recursive_module_init.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "recursive_module_init.exe",
    main     = ":Recursive_module_init",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Recursive_module_init",
    struct        = "recursive_module_init.ml",
)

######################## Modules & Signatures ########################
##############
js_run_binary(
    name  = "__recursive_module_init.referencejs__",
    tool  = ":recursive_module_init.bc.js",
    stdout  = "recursive_module_init.referencejs"
)

##########
diff_test(
    name  = "recursive_module_init.reference.diff_test",
    file1  = ":recursive_module_init.reference",
    file2  = ":recursive_module_init.referencejs"
)

