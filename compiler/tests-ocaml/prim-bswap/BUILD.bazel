genrule(
    outs  = [

    ],
    name  = "bswap.reference",
    srcs  = [
        ":bswap.reference",
        ":bswap.referencejs"
    ],
    cmd   = " ".join([
        "$(execpath diff)",
        "`realpath $(location :bswap.reference)`",
        "`realpath $(location :bswap.referencejs)`",
    ]),
    exec_tools = [
        "diff"
    ]
)

