package(default_visibility = ["//visibility:public"])

load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_library",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "bigstring_access.bc.js",
    entry_point = ":bigstring_access.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "bigstring_access.exe.jsoo",
    main   = ":bigstring_access.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "bigstring_access.exe",
    main     = ":Bigstring_access",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Bigstring_access",
    struct        = "bigstring_access.ml",
)

#############
js_binary(
    name        = "string_access.bc.js",
    entry_point = ":string_access.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "string_access.exe.jsoo",
    main   = ":string_access.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "string_access.exe",
    main     = ":String_access",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "String_access",
    struct        = "string_access.ml",
)

######################## Modules & Signatures ########################
##############
js_run_binary(
    name  = "__bigstring_access.referencejs__",
    tool  = ":bigstring_access.bc.js",
    stdout  = "bigstring_access.referencejs"
)

##########
diff_test(
    name  = "bigstring_access.reference.diff_test",
    file1  = ":bigstring_access.reference",
    file2  = ":bigstring_access.referencejs"
)

##############
js_run_binary(
    name  = "__string_access.referencejs__",
    tool  = ":string_access.bc.js",
    stdout  = "string_access.referencejs"
)

##########
diff_test(
    name  = "string_access.reference.diff_test",
    file1  = ":string_access.reference",
    file2  = ":string_access.referencejs"
)

