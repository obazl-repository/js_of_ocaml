package(default_visibility = ["//visibility:public"])

load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_library",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "testmap.bc.js",
    entry_point = ":testmap.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "testmap.exe.jsoo",
    main   = ":testmap.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "testmap.exe",
    main     = ":Testmap",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Testmap",
    struct        = "testmap.ml",
)

#############
js_binary(
    name        = "testset.bc.js",
    entry_point = ":testset.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "testset.exe.jsoo",
    main   = ":testset.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "testset.exe",
    main     = ":Testset",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Testset",
    struct        = "testset.ml",
)

######################## Modules & Signatures ########################
##############
js_run_binary(
    name  = "__testmap.referencejs__",
    tool  = ":testmap.bc.js",
    stdout  = "testmap.referencejs"
)

##########
diff_test(
    name  = "testmap.reference.diff_test",
    file1  = ":testmap.reference",
    file2  = ":testmap.referencejs"
)

##############
js_run_binary(
    name  = "__testset.referencejs__",
    tool  = ":testset.bc.js",
    stdout  = "testset.referencejs"
)

##########
diff_test(
    name  = "testset.reference.diff_test",
    file1  = ":testset.reference",
    file2  = ":testset.referencejs"
)

