    outs  = [

    ],
    name  = "md5.reference",
    srcs  = [
        ":md5.reference",
        ":md5.referencejs"
    ],
    cmd   = " ".join([
        "$(execpath diff)",
        "`realpath $(location :md5.reference)`",
        "`realpath $(location :md5.referencejs)`",
    ]),
