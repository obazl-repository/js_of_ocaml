    name        = "md5.exe.js",
    entry_point = ":md5.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "md5.exe.jsoo",
    main   = ":md5.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "md5.exe",
    main     = ":Md5",
    visibility = ["//visibility:public"],
)

