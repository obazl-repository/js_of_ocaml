package(default_visibility = ["//visibility:public"])

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "test_bytes.exe.js",
    entry_point = ":test_bytes.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "test_bytes.exe.jsoo",
    main   = ":test_bytes.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "test_bytes.exe",
    main     = ":Test_bytes",
    visibility = ["//visibility:public"],
)

ocaml_module(
    name          = "Test_bytes",
    struct        = "test_bytes.ml",
X4    opts          = ["-open", "Test_bytes_execlib"],
    deps          = [":lib_bytes_execlib"],
    visibility    = ["//visibility:private"]
)

#############
js_binary(
    name        = "binary.exe.js",
    entry_point = ":binary.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "binary.exe.jsoo",
    main   = ":binary.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "binary.exe",
    main     = ":Binary",
    visibility = ["//visibility:public"],
)

ocaml_module(
    name          = "Binary",
    struct        = "binary.ml",
X4    opts          = ["-open", "Binary_execlib"],
    deps          = [":lib_bytes_execlib"],
    visibility    = ["//visibility:private"]
)

############################ Exec Libs ###############################
ocaml_ns_library(
    name = "lib_bytes_execlib",
    manifest = [
        ":Testing"
    ],
    visibility = ["//visibility:private"],
)

######################## Modules & Signatures ########################

ocaml_module(
    name          = "Testing",
    struct        = "testing.ml",
X5    opts          = ["-open", "#f_execlib"],
    deps          =     visibility    = ["//visibility:private"]
)


############################# Rules ##################################

########
genrule(
    outs  = [

    ],
    name  = "test_bytes.reference",
    srcs  = [
        ":test_bytes.reference",
        ":test_bytes.referencejs"
    ],
    cmd   = " ".join([
        "$(execpath diff)",
        "`realpath $(location :test_bytes.reference)`",
        "`realpath $(location :test_bytes.referencejs)`",
    ]),
    exec_tools = [
        "diff"
    ]
)

