genrule(
    outs  = [

    ],
    name  = "suffix.reference",
    srcs  = [
        ":suffix.reference",
        ":suffix.referencejs"
    ],
    cmd   = " ".join([
        "$(execpath diff)",
        "`realpath $(location :suffix.reference)`",
        "`realpath $(location :suffix.referencejs)`",
    ]),
    exec_tools = [
        "diff"
    ]
)
