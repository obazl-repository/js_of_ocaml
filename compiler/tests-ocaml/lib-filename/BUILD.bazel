package(default_visibility = ["//visibility:public"])

load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_library",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "suffix.bc.js",
    entry_point = ":suffix.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "suffix.exe.jsoo",
    main   = ":suffix.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "suffix.exe",
    main     = ":Suffix",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Suffix",
    struct        = "suffix.ml",
)

#############
js_binary(
    name        = "extension.bc.js",
    entry_point = ":extension.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "extension.exe.jsoo",
    main   = ":extension.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "extension.exe",
    main     = ":Extension",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Extension",
    struct        = "extension.ml",
)

######################## Modules & Signatures ########################
##############
js_run_binary(
    name  = "__suffix.referencejs__",
    tool  = ":suffix.bc.js",
    stdout  = "suffix.referencejs"
)

##########
diff_test(
    name  = "suffix.reference.diff_test",
    file1  = ":suffix.reference",
    file2  = ":suffix.referencejs"
)

##############
js_run_binary(
    name  = "__extension.referencejs__",
    tool  = ":extension.bc.js",
    stdout  = "extension.referencejs"
)

##########
diff_test(
    name  = "extension.reference.diff_test",
    file1  = ":extension.reference",
    file2  = ":extension.referencejs"
)

