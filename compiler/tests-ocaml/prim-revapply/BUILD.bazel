package(default_visibility = ["//visibility:public"])

load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_library",
     "ocaml_ns_library",
     "ocaml_exec_module",
     "ocaml_module",
)

load("@rules_jsoo//build:rules.bzl", "jsoo_binary", "jsoo_library")

load("@aspect_rules_js//js:defs.bzl",
     "js_binary", "js_run_binary", "js_library", "js_test")

##############################
####  Executable Targets  ####
#############
js_binary(
    name        = "apply.bc.js",
    entry_point = ":apply.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "apply.exe.jsoo",
    main   = ":apply.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "apply.exe",
    main     = ":Apply",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Apply",
    struct        = "apply.ml",
)

#############
js_binary(
    name        = "revapply.bc.js",
    entry_point = ":revapply.exe.jsoo",
    visibility  = ["//visibility:public"],
)

jsoo_binary(
    name     = "revapply.exe.jsoo",
    main   = ":revapply.exe",
    visibility = ["//visibility:public"],
)

ocaml_binary(
    name     = "revapply.exe",
    main     = ":Revapply",
    visibility = ["//visibility:public"],
)

ocaml_exec_module(
    name          = "Revapply",
    struct        = "revapply.ml",
)

######################## Modules & Signatures ########################
##############
js_run_binary(
    name  = "__apply.referencejs__",
    tool  = ":apply.bc.js",
    stdout  = "apply.referencejs"
)

##########
diff_test(
    name  = "apply.reference.diff_test",
    file1  = ":apply.reference",
    file2  = ":apply.referencejs"
)

##############
js_run_binary(
    name  = "__revapply.referencejs__",
    tool  = ":revapply.bc.js",
    stdout  = "revapply.referencejs"
)

##########
diff_test(
    name  = "revapply.reference.diff_test",
    file1  = ":revapply.reference",
    file2  = ":revapply.referencejs"
)

