genrule(
    outs  = [

    ],
    name  = "apply.reference",
    srcs  = [
        ":apply.reference",
        ":apply.referencejs"
    ],
    cmd   = " ".join([
        "$(execpath diff)",
        "`realpath $(location :apply.reference)`",
        "`realpath $(location :apply.referencejs)`",
    ]),
    exec_tools = [
        "diff"
    ]
)
