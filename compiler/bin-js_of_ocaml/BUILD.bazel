        "js_of_ocaml-build-runtime.1"
    ],
    name  = "__js_of_ocaml-build-runtime.1__",
    cmd   = " ".join([
        "$(execpath //compiler/bin-js_of_ocaml:js_of_ocaml.exe)",
        "build-runtime",
        "--help=groff",
        "> $@"
    ]),
    exec_tools = [
        "//compiler/bin-js_of_ocaml:js_of_ocaml.exe"
    ]
