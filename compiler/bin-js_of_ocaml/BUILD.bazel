package(default_visibility = ["//visibility:public"])

load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_ns_library",
     "ocaml_module",
)

DEPS_1 = [
    "//compiler/lib-cmdline:jsoo_cmdline",
    "//compiler/lib:js_of_ocaml_compiler",
    "@cmdliner//lib/cmdliner",
    "@ocaml//compiler-libs/common",
    "//compiler/lib-runtime-files:js_of_ocaml_compiler_runtime_files"
]

OPTS_1 = [
        "-safe-string"
]

##############################
####  Executable Targets  ####
ocaml_binary(
    name     = "js_of_ocaml.exe",
    main    = ":Js_of_ocaml",
    # deps = ["__lib_js_of_ocaml__"],
    opts = ["-warn-error", "-31"], # module linked twice
    visibility = ["//visibility:public"],
)

