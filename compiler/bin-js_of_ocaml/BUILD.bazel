################  rule  ################
genrule(
    outs  = [
        "js_of_ocaml-build-fs.1"
    ],
    name  = "__js_of_ocaml-build-fs.1__",
    cmd   = " ".join([
        "$(execpath //compiler/bin-js_of_ocaml:js_of_ocaml.exe)",
        "build-fs",
        "--help=groff",
        "> $@"
    ]),
