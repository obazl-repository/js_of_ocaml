package(default_visibility = ["//visibility:public"])

load("@rules_ocaml//build:rules.bzl",
     "ocaml_ns_archive",
     "ocaml_module",
     "ppx_executable",
)

DEPS_1 = [
    "//compiler/lib-runtime-files:js_of_ocaml_compiler_runtime_files"
]

#############################
####  Aggregate Targets  ####

#################
ocaml_ns_archive(
    name       = "jsoo_lib_runtime_test",
    ns         = "jsoo_lib_runtime_test",
    manifest = [
        ":All"
    ],
)

######################## Modules & Signatures ########################

ocaml_module(
    name          = "All",
    struct        = "all.ml",
    deps          = DEPS_1,
    ppx           = ":ppx_1.exe",
)



###############
ppx_executable(
    name    = "ppx_1.exe",
    main    = ":Ppx_driver",
    deps = [
        "@ppx_expect//lib/ppx_expect"
    ],
    ## @ppx_inline_test//lib/ppx_inline_test
)

#############
ocaml_module(
    name       = "Ppx_driver",
    struct     = ":ppx_driver.ml",
    visibility = ["//visibility:public"],
    deps       = ["@ppxlib//lib/ppxlib"],
)

########
genrule(
    name = "__ppx_driver__",
    outs = ["ppx_driver.ml"],
    cmd = "\n".join([
        "echo \"(* GENERATED FILE - DO NOT EDIT *)\" > \"$@\"",
        "echo \"let () = Ppxlib.Driver.standalone ()\" >> \"$@\"",
    ])
)

